    max-width: 600px;
}

.error-code {
    font-size: 4rem;
    font-weight: bold;
    color: #e74c3c;
    margin-bottom: 1rem;
}

.error-title {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: #333;
}

