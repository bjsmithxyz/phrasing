<div class="error-page">
    <div class="error-content">
        <h1 class="error-code"><%= statusCode %></h1>
        <h2 class="error-title"><%= title %></h2>
        <p class="error-message"><%= message %></p>
        
        <% if (details && process.env.NODE_ENV === 'development') { %>
            <div class="error-details">
                <h3>Development Details:</h3>
                <pre><%= details %></pre>
            </div>
        <% } %>
        
        <div class="error-actions">
            <a href="/" class="btn-primary">üè† Go Home</a>
            <button onclick="history.back()" class="btn-secondary">‚Üê Go Back</button>
            <button onclick="location.reload()" class="btn-secondary">üîÑ Retry</button>
        </div>
        
        <div class="error-help">
            <h3>What can you do?</h3>
            <ul>
                <li>Check if the URL is correct</li>
                <li>Try refreshing the page</li>
                <li>Go back to the <a href="/">homepage</a></li>
                <li>Contact support if the problem persists</li>
            </ul>
        </div>
    </div>
</div>

