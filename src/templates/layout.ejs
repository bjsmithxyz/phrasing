<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <meta name="description" content="Simple markdown phrase collection browser">
    
    <!-- Stylesheets -->
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!-- Header -->
    <header class="site-header">
        <nav class="nav-container">
            <h1 class="site-title">
                <a href="/">Phrasing</a>
            </h1>
            <div class="nav-actions">
                <% if (locals.showSearch !== false) { %>
                <div class="search-container">
                    <input 
                        type="text" 
                        id="search-input" 
                        class="search-input" 
                        placeholder="Search phrases..."
                        autocomplete="off"
                    >
                    <span class="search-icon">🔍</span>
                    <button id="search-clear" class="search-clear" title="Clear search">✕</button>
                </div>
                <% } %>
                <button id="theme-toggle" class="btn-icon" title="Toggle theme">
                    🌙
                </button>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main id="main-content" class="main-content">
        <%- body %>
    </main>

    <!-- Footer -->
    <footer class="site-footer">
        <div class="footer-content">
            <p>&copy; <%= new Date().getFullYear() %> Phrasing - Simple Phrase Collection</p>
            <% if (locals.totalFiles) { %>
                <span>📄 <%= totalFiles %> files</span>
            <% } %>
        </div>
    </footer>

    <% if (locals.showGoToTop !== false) { %>
    <!-- Go to Top Button -->
    <button id="go-to-top" class="go-to-top" title="Go to top">↑</button>
    <% } %>

    <!-- JavaScript -->
    <script src="/js/app.js"></script>
</body>
</html>
